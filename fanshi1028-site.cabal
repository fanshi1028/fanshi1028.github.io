cabal-version:      3.0
name:               fanshi1028-site
version:            0.1.0.0
synopsis:           fanshi1028's personal site
description:        Getting started miso application
license:            BSD-3-Clause
license-file:       LICENSE
author:             fanshi1028
maintainer:         fanshi1028
copyright:          fanshi1028 @ 2025
category:           Web
build-type:         Simple
extra-doc-files:    CHANGELOG.md

common warnings
  ghc-options:
    -funbox-strict-fields -O2 -ferror-spans -fspecialise-aggressively -Wall

common wasm
  if arch(wasm32)
    ghc-options:
      -no-hs-main -optl-mexec-model=reactor "-optl-Wl,--export=hs_start"
    cpp-options:
      -DWASM

library
  exposed-modules:
    Clock
    Pomodoro
    ProductRequirementDocument
  hs-source-dirs:
    src
  build-depends:
    aeson, base < 5, containers, file-embed, jsaddle, miso, network-uri, text, time, validation-selective
  default-language:
    Haskell2010

executable fanshi1028-site
  import:
    wasm, warnings
  other-modules:
  main-is:
    Main.hs
  build-depends:
    fanshi1028-site, base < 5, file-embed, miso, network-uri
  hs-source-dirs:
    app
  default-language:
    Haskell2010

executable prerender
  import: warnings
  main-is:
    Main.hs
  build-depends:
    fanshi1028-site,  base < 5, miso, file-io, filepath
  hs-source-dirs:
    prerender
  default-language:
    Haskell2010
